{% extends "ProductShareBundle::bootstrap.html.twig" %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
{% endblock %}

{% block title 'Product Share' %}

{% block menu %}
    <li><a href="{{ path('_productshare') }}">Home</a></li>
    <li><a href="{{ path('_exports') }}">Exports</a></li>
    <li><a href="{{ path('_export_statistics') }}">Statistics</a></li>
    {% block content_header_more %}
    {% endblock %}
{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="block">
        {% block content %}{% endblock %}
    </div>
{% endblock %}
